let todos := ()

fun show_todos () {
  each t in todos {
    print (t)
  }
}

fun add_todo () {
  print ("TODO: ")
  let todo_text := read ()
  push (todos todo_text)
}

fun forever (fn) {
    let cont := fn()
    if cont {
      forever(fn)
    }
}

forever(fun _ () {
  let inp := read ()
  if inp ~= "quit" {

    if inp = "add" {
      add_todo ()
    }

    if inp = "show" {
      show_todos ()
    }

    #t
  } else {#f}
})

fun arityTest (a b c) {
    a + b * c
}

print(arityTest (1 2 4))
